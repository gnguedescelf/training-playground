pipeline {

parameters{
	choice (name: 'CHOICE', choices: ['build', 'test'], description: 'Pick something')
}
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    stage('build'){
   steps{
    	echo 'build'
    		}
    	}
     stage('test'){
     steps{
	echo 'test'
		}
   	 }
	}
}
