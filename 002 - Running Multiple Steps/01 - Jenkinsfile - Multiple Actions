def write (text = ''){

	touch "$text"
	sh "date > $text"
	"cat $text"
	
}

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage("create"){
		steps{
		write('file.txt')
		cat file.txt
		sh 'sleep 10s'
		write('file.txt')
		sh 'sleep 10s'
		}
	}
    }
}
